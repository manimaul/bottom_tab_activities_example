<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.madrona.bottomnavigationexample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".NavigationControllerActivity"
            android:excludeFromRecents="true"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".circle.CircleActivity"
            android:label="@string/circle"
            android:theme="@style/BottomTabActivityTheme" />

        <activity
            android:name=".triangle.TriangleActivity"
            android:label="@string/triangle"
            android:theme="@style/BottomTabActivityTheme" />

        <activity
            android:name=".square.SquareActivity"
            android:label="@string/square"
            android:theme="@style/BottomTabActivityTheme" />

    </application>

</manifest>